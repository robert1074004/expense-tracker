<div class="container-fluid mt-5">
    <div class="container mx-auto list-group-item-warning py-2 border border-dark border-3" style="width:400px;">
      <small>*必填欄位</small>
      <h4 class="text-center">請修改你的支出</h4>
      <form action="/records/{{record._id}}?_method=PUT" method="POST" >
        <div class="mb-3">
          <label for="InputName" class="form-label">名稱*</label>
          <input type="text" class="form-control" id="InputName" placeholder="name" name="name" value="{{record.name}}" required>
        </div>
        <div class="mb-3">
          <label for="InputDate" class="form-label">日期*</label>
          <input type="date" class="form-control" id="InputDate" name="date"  value="{{record.date}}" required>
        </div>
        <div class="mb-3">
          <label for="InputCategory" class="form-label">類別*</label>
          <select  class="form-select" aria-label="Default select example" name="category" id="InputCategory" value="{{record.categoryName}}">
            {{#each categorys}}
            <option >{{this.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="InputAmount" class="form-label">金額*</label>
          <input type="number" class="form-control" id="InputAmount" min="0"   name="amount" value="{{record.amount}}" required>
        </div>
        <div class="d-flex justify-content-center "><button type="submit" class="btn btn-secondary">Edit</button></div>
      </form>
    </div>
</div>
